{
  "deployment_test_config": {
    "description": "Configuration for deployment testing of IDT package",
    "deployment_directory": "idtexternal/idt",
    "test_data_directory": "idtexternal/testimages",
    
    "test_suite": {
      "enabled_tests": [
        "deployment_structure",
        "executable_basic", 
        "deployment_workflow",
        "deployment_bat_files",
        "external_directory_access",
        "video_extraction"
      ],
      
      "timeouts": {
        "basic_commands": 30,
        "workflow_commands": 300,
        "video_extraction": 120
      }
    },
    
    "validation": {
      "required_files": [
        "idt.exe",
        "README.md", 
        "LICENSE",
        "VERSION"
      ],
      
      "required_directories": [
        "bat",
        "scripts",
        "docs"
      ],
      
      "test_commands": {
        "help": ["--help"],
        "workflow_dry_run": ["workflow", "{{test_data}}", "--output-dir", "{{output}}", "--dry-run"],
        "video_extraction": ["extract-frames", "{{test_data}}", "--output-dir", "{{output}}"]
      }
    },
    
    "reporting": {
      "save_detailed_results": true,
      "output_directory": "test_results",
      "result_format": "json"
    }
  }
}